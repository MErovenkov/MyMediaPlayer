<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fragment -->
    <attr name="fragment_background" format="reference"/>

    <!-- Text -->
    <attr name="text_primary_color" format="color"/>

    <!-- Image -->
    <attr name="image_tint" format="color"/>

    <!-- Recycler -->
    <attr name="line_divider" format="color"/>

    <attr name="animationDuration" format="integer"/>

    <item name="exo_double_tap_control" type="id" />
    <item name="semicircle_ripple" type="id" />
    <item name="text_second" type="id" />
    <item name="triangle_rewind" type="id" />

    <declare-styleable name="DoubleTapPlayerView">
        <attr name="double_tap_controller_id" format="reference" />
    </declare-styleable>

    <declare-styleable name="DoubleTapControlView">
        <attr name="rewindTime" format="integer"/>
        <attr name="tapDelay" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SemicircleRippleView">
        <attr name="semicircleColor" format="color"/>
        <attr name="semicircleArcSize" format="dimension"/>
        <attr name="rippleColor" format="color"/>
        <attr name="animationDuration"/>
    </declare-styleable>

    <declare-styleable name="TextSecondView">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="android:fontFamily" format="string"/>
    </declare-styleable>

    <declare-styleable name="TrianglesRewindView">
        <attr name="triangleColor" format="color"/>
        <attr name="sideTriangle" format="dimension"/>
        <attr name="animationDuration"/>
    </declare-styleable>
</resources>